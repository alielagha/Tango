<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.UserDetailsActivity"
    tools:showIn="@layout/activity_user_details">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/detailsCardView"
            android:layout_width="match_parent"
            android:layout_height="336dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#46476A"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tourTitleTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="24dp"
                    android:text="About"
                    android:textColor="@color/whiteTitlesColor"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tourContentTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="18dp"
                    android:text="Itâ€™s through mistakes that you actually can grow You have to get bad in order to get good"
                    android:textAlignment="center"
                    android:textColor="@color/whiteSubTitlesColor"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tourTitleTv"
                    app:layout_constraintTop_toBottomOf="@+id/tourTitleTv" />

                <TextView
                    android:id="@+id/allMediaTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:text="All Media"
                    android:textColor="@color/whiteTitlesColor"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@+id/tourContentTv"
                    app:layout_constraintTop_toBottomOf="@+id/tourContentTv" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/list_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/allMediaTv"
                    app:layout_constraintTop_toBottomOf="@+id/allMediaTv" />

                <TextView
                    android:id="@+id/tourTitleTv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="4-(941)-4550"
                    android:textColor="@color/whiteTitlesColor"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@+id/imageView"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="18dp"
                    android:text="Mobile"
                    android:textAlignment="center"
                    android:textColor="@color/whiteSubTitlesColor"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/tourTitleTv1"
                    app:layout_constraintTop_toBottomOf="@+id/tourTitleTv1" />

                <Button
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/video_circle"
                    app:layout_constraintBottom_toBottomOf="@+id/twitterButton"
                    app:layout_constraintEnd_toStartOf="@+id/twitterButton"
                    app:layout_constraintTop_toTopOf="@+id/twitterButton" />

                <Button
                    android:id="@+id/twitterButton"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/mobile_circle"
                    app:layout_constraintBottom_toBottomOf="@+id/googleButton"
                    app:layout_constraintEnd_toStartOf="@+id/googleButton"
                    app:layout_constraintTop_toTopOf="@+id/googleButton" />

                <Button
                    android:id="@+id/googleButton"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="23dp"
                    android:background="@drawable/message_circle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="#46476A"
            android:drawableStart="@drawable/facebook"
            android:drawablePadding="24dp"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:text="Block this user"
            android:textAllCaps="false"
            android:textColor="#FF3953"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailsCardView" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#46476A"
            android:drawableStart="@drawable/facebook"
            android:drawablePadding="24dp"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:text="Delete all chat"
            android:textAllCaps="false"
            android:textColor="#FF3953"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>